<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qiao.androidlab.lightreader">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MOUNT_FORMAT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.Camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.SettingActivity"
            android:theme="@style/AppThemeSetting"></activity>
        <activity
            android:name=".Activities.CameraActivity"
            android:screenOrientation="locked"
            android:theme="@style/NoTitleFullScreen"></activity>
        <activity
            android:name=".Activities.ShowActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustUnspecified|adjustResize"></activity>
        <activity
            android:name=".Activities.CenterActivity"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
